command /loopblocksview <integer>:
    trigger:
        loop blocks between the block at {partidaplaca::%arg-1%::1} and the block at {partidaplaca::%arg-1%::2}:
            loop-block is sign:
                wait 5 tick
                message loop-block
                message line 1 of loop-block
                message line 4 of loop-block
                set {_yaw} to {partidaplaca::%arg-1%::5}
                teleport player to location(loop-block's x-coordinate, loop-block's y-coordinate, loop-block's z-coordinate, loop-block's world, {_yaw}, 70) 

        loop blocks between the block at {partidaplaca::%arg-1%::3} and the block at {partidaplaca::%arg-1%::4}:
            loop-block is sign:
                wait 5 tick
                message loop-block
                message line 1 of loop-block
                message line 4 of loop-block
                set {_yaw} to {partidaplaca::%arg-1%::6}
                teleport player to location(loop-block's x-coordinate, loop-block's y-coordinate, loop-block's z-coordinate, loop-block's world, {_yaw}, 70) 

